          <%= form.rich_text_area :description, class: "form-control" %>
        </div>
        <div class="mt-2">
          <%= %>
          <%= form.collection_select :person_id, @people, :id, :name, class: "form-collection" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= form.submit "Guardar Comentario", class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
  </div>
</div>
