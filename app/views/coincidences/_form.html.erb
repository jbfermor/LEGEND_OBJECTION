<div class="row shadow">
  <%= form_with model: coincidence, url: comment_coincidences_path(params[:comment_id]) do |form| %>
    <% if coincidence.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(coincidence.errors.count, "error") %> prohibited this coincidence from being saved:</h2>

        <ul>
          <% coincidence.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="m-2">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, size: "70x5", class: "form-control" %>
    </div>

    <div class="m-2">
      <%= select_tag "zone", options_from_collection_for_select(@zones, "id", "name"), class: "form-select", data: { controller: "zones" } %>
    </div>

    <div class="m-2" id="zone_people_list">

    </div>

    <div class="m-2">
      <%= form.submit "Guardar", class: "btn btn-sm btn-success" %>
    </div>
  <% end %>
</div>

