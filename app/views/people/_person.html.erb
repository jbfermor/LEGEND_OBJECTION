<div id="<%= dom_id person %>">
  <div class="card shadow">
    <div class="card-header m-2 p-3 d-flex justify-content-between">
      <h2><%= person.name %></h2>
      <div class="btn-group">
        <div>
          <%= link_to "Editar", edit_person_path(@person), class: "btn btn-sm btn-warning" %>
        </div>
        <%= button_to "Eliminar", @person, method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
    <div class="card-body">
      <%= person.zone.name %>
    </div>
  </div>   
</div>
